# Data Source Configuration

# Demo Mode (no API keys needed - generates realistic test data)
# Set to 'true' to use demo mode (default and recommended for getting started)
DEMO_MODE=true

# RescueGroups.org API (optional - free API for rescue organizations)
# Get your API key from: https://userguide.rescuegroups.org/display/APIDG/API+Developers+Guide+Home
# Set DEMO_MODE=false and add your key here to use real shelter data
RESCUEGROUPS_API_KEY=your_rescuegroups_api_key_here

# Server Configuration
PORT=4000

# Atlanta Metro Area Configuration (for geographic filtering)
ATLANTA_LAT=33.7490
ATLANTA_LON=-84.3880
SEARCH_RADIUS_MILES=20
